<h1>Blog Authors</h1>
<%= link_to "Add Author", new_author_path %>
<ul>
<% @authors.each do |author| %>
  <li>
  <%= link_to author.name, author_path(author) %><br>
  <%= author.bio %>
  </li>
<% end %>
</ul>

