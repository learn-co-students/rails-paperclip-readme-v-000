<!--parameter for form_for that lets it know it's submitting binary and text data-->
<%= form_for @author, html:{multipart:true} do |f| %>
<%= f.label :avatar %>
<%= f.file_field :avatar %><br>
  <%= f.label :name %>
  <%= f.text_field :name %><br>
  <%= f.label :bio %>
  <%= f.text_area :bio %>
  <%= f.submit %>
<% end %>
