<!-- html line is a parameter for for, means itll be submitting both text and
  bindary data to the server -->
<!-- file_field  helper generates the appropriate input and choose button to
  attach file -->
<%= form_for @author, html: {multipart: true} do |f| %>
  <%= f.label :avatar %>
  <%= f.file_field :avatar %><br />
  <%= f.label :name %>
  <%= f.text_field :name %><br />
  <%= f.label :bio %>
  <%= f.text_area :bio %><br />
  <%= f.submit %>
<% end %>
